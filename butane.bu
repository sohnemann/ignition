variant: fcos
version: 1.6.0
 
passwd:
  users:
    - name: core
      ssh_authorized_keys:
        - ssh-rsa  core@desktop

systemd:
  units:
    - name: sshd.service
      enabled: true

storage:
  disks:
    - device: /dev/nvme0n1
      wipe_table: true
      partitions:
        - number: 1
          label: var
          size_mib: 16384  # adjust this as needed
        - number: 2
          label: docker
  filesystems:
    - path: /var
      device: /dev/disk/by-partlabel/var
      format: btrfs
      wipe_filesystem: true
      label: var
      with_mount_unit: true
    - path: /docker
      device: /dev/disk/by-partlabel/docker
      format: ext4
      wipe_filesystem: true
      label: docker
      with_mount_unit: true
  
  files:
    - path: /etc/hostname
      mode: 0644
      contents:
        inline: tui

