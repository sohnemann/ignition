variant: fcos
version: 1.6.0

# Hostname
storage:
  files:
    - path: /etc/hostname
      mode: 0644
      contents:
        inline: tui

# User configuration
passwd:
  users:
    - name: core
      ssh_authorized_keys:
        - ssh-rsa  core@desktop

# Enable and start SSH
systemd:
  units:
    - name: sshd.service
      enabled: true

# Install to /dev/sda (make sure this is correct for your system!)
ignition:
  config:
    merge: []
  security:
    tls:
      certificate_authorities: []
  timeouts: {}
  #version: 3.4.0
  # Install directive
  # This only applies if using FCOS live ISO/kernel/initrd + `coreos-installer`
  # If embedding, you don't need this
  # This should be used as a separate `coreos-installer` argument:
  # sudo coreos-installer install /dev/sda --ignition-file coreos.ign
