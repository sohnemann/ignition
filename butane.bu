variant: fcos
version: 1.6.0
 
passwd:
  users:
    - name: core
      ssh_authorized_keys:
        - ssh-rsa  core@desktop

systemd:
  units:
    - name: sshd.service
      enabled: true
    - name: fstrim.timer
      enabled: true
    - name: docker.mount
      enabled: true
      contents: |
        [Unit]
        Description=Mount /docker
        After=var.mount
        Requires=var.mount

        [Mount]
        Where=/docker
        What=/dev/disk/by-partlabel/docker
        Type=ext4
        Options=defaults,noatime,discard

        [Install]
        WantedBy=local-fs.target

storage:
  disks:
    - device: /dev/nvme0n1
      wipe_table: true
      partitions:
        - number: 1
          label: var
          size_mib: 16384  # adjust this as needed
        - number: 2
          label: docker
          size_mib: 65536 # adjust this as needed
        - number: 3
          label: root
          size_mib: 0  # rest of the disk

  filesystems:
    - path: /
      device: /dev/disk/by-partlabel/root
      format: ext4
      label: root
      wipe_filesystem: true  # Be careful not to wipe this unless intentional

    - path: /var
      device: /dev/disk/by-partlabel/var
      format: btrfs
      wipe_filesystem: true
      label: var
      with_mount_unit: true
      mount_options:
        - noatime

    - path: /docker
      device: /dev/disk/by-partlabel/docker
      format: ext4
      wipe_filesystem: true
      label: docker
      mount_options:
        - noatime
        - discard

  files:
    - path: /etc/hostname
      mode: 0644
      contents:
        inline: tui
